#!/bin/bash
# set -e

file="$1"

# Ensure input file is provided
if [ -z "$file" ]; then
  echo "âŒ Usage: $0 <markdown-file>"
  exit 1
fi

# Check that file exists
if [ ! -f "$file" ]; then
  echo "âŒ Error: File '$file' not found."
  exit 1
fi

# Create temp HTML file
html_tmp=$(mktemp /tmp/linkcheck-XXXX.html)

echo "ğŸ“„ Converting Markdown to HTML..."
pandoc "$file" -o "$html_tmp"

echo "ğŸ”— Running linkchecker (this may take a few seconds)..."
link_output=$(linkchecker "$html_tmp" --no-status --check-extern)

# Clean up temp file
rm "$html_tmp"

# Extract redirects
redirects=$(echo "$link_output" | awk '/\[http-redirected\]/, /status: [0-9]+ \./')

# Extract errors
errors=$(echo "$link_output" | grep -E 'Result *Error' || true)

# Summarize
if [ -n "$redirects" ]; then
  echo ""
  echo "âš ï¸ Redirects detected (not failures):"
  echo "$redirects"
fi

if [ -n "$errors" ]; then
  echo ""
  echo "âŒ Broken links found:"
  echo "$errors"
  exit 1
else
  echo ""
  echo "âœ… All links are valid."
  exit 0
fi
